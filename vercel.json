{
  "version": 2,
  "builds": [
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    },
    {
      "src": "nacos_payment/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": [
          "nacos_payment/**",
          "payment/**",
          "db.sqlite3",
          "manage.py",
          "requirements.txt"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "nacos_payment/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "nacos_payment.settings"
  }
}
